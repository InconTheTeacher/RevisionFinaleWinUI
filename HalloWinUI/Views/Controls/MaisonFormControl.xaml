<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="HalloWinUI.Views.Controls.MaisonFormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:HalloWinUI.Views.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Spacing="12">
        <TextBox
            Header="Adresse"
            PlaceholderText="Ex: 123 Rue des Fantômes"
            Text="{x:Bind MaisonVM.Adresse, Mode=TwoWay}" />

        <TextBox
            Header="Code postal"
            MaxLength="7"
            PlaceholderText="Ex: H2X 1Y7"
            Text="{x:Bind MaisonVM.CodePostal, Mode=TwoWay}" />

        <TextBox
            Header="Ville"
            PlaceholderText="Ex: Montréal"
            Text="{x:Bind MaisonVM.Ville, Mode=TwoWay}" />
    </StackPanel>

</UserControl>
